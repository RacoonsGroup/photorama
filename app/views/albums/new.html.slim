= simple_form_for [:page_module, @album]  do |form|
  = form.input :title
  = form.input :desc, input_html: {class:'redactor'}, as:'text'
  = f.collection_radio_buttons :gallery_type, [['shadowbox', 'Shadowbox'] ,['galerffies', 'Galerffies']], :first, :last
  = form.input :order, as: :integer
  = form.button :submit

javascript:
  $('.redactor').redactor()